# Treasury Service Configuration
# Copy this file to .env and configure for your environment
# Spec: docs/specs/001-database-connection.md

# Service Identity
SERVICE_NAME=treasury-service
SERVICE_VERSION=1.0.0
SERVICE_DESCRIPTION=Treasury service for financial operations
API_VERSION=v1

# Runtime Configuration
PORT=50052
ENVIRONMENT=dev                # dev/staging/prod/local
REGION=local                    # Deployment region/zone

# Database Configuration
# Spec: docs/specs/001-database-connection.md
DB_HOST=localhost
DB_PORT=5432
DB_NAME=treasury_db
DB_USER=treasury_user
DB_PASSWORD=treasury_pass
DB_SCHEMA=public
DB_SSL_MODE=disable

# Connection Pool Configuration
DB_MAX_CONNECTIONS=25
DB_MAX_IDLE_CONNECTIONS=5
DB_CONNECTION_MAX_LIFETIME=3600  # seconds
DB_CONNECTION_MAX_IDLE_TIME=900  # seconds

# Health Check Configuration
DB_HEALTH_CHECK_INTERVAL=30  # seconds
DB_PING_TIMEOUT=5  # seconds

# Dependency Services
LEDGER_SERVICE_HOST=localhost
LEDGER_SERVICE_PORT=50051

# Service Metadata
SERVICE_OWNER=treasury-team@example.com
REPO_URL=https://github.com/example/go-mono-repo
DOCS_URL=https://docs.example.com/treasury-service
SUPPORT_CONTACT=treasury-support@example.com
SERVICE_TIER=1                  # Service tier/priority level

# Features
ENABLED_FEATURES=base,manifest  # Comma-separated feature flags

# Logging
LOG_LEVEL=info                  # debug/info/warn/error
LOG_FORMAT=json                 # json/text

# Labels (comma-separated key:value pairs)
SERVICE_LABELS=team:treasury,domain:treasury

# Build Configuration (typically set by CI/CD)
BUILD_COMMIT=unknown
BUILD_BRANCH=unknown
BUILD_TIME=unknown
BUILD_USER=unknown
BUILD_DIRTY=false
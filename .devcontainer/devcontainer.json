{
  "name": "Go Mono Repo",
  "service": "dev",
  "dockerComposeFile": "docker-compose.yml",
  "features": {
    "ghcr.io/devcontainers/features/go:1": {},
    // "ghcr.io/devcontainers/features/docker-in-docker:1": {},
    "ghcr.io/meaningful-ooo/devcontainer-features/homebrew:2": {},
    // "ghcr.io/devcontainers/features/aws-cli:1": {},
    "ghcr.io/skriptfabrik/devcontainer-features/gitlab-cli:1": {},
    "ghcr.io/devcontainers-extra/features/protoc:1": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "eamodio.gitlens",
        "golang.go",
        "bierner.markdown-mermaid",
        "ms-vscode.makefile-tools",
        "zxh404.vscode-proto3",
        "plex.vscode-protolint"
      ],
      "settings": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.codeActionsOnSave": {
          "source.fixAll.eslint": "explicit"
        },
        "terminal.integrated.defaultProfile.linux": "zsh",
        "terminal.integrated.profiles.linux": {
          "bash": {
            "path": "bash",
            "icon": "terminal-bash"
          },
          "zsh": {
            "path": "zsh"
          }
        }
      }
    }
  },
  "remoteUser": "node",
  "mounts": [
    "source=claude-code-bashhistory-${devcontainerId},target=/commandhistory,type=volume",
    "source=claude-code-config-${devcontainerId},target=/home/node/.claude,type=volume"
  ],
  "containerEnv": {
    "NODE_OPTIONS": "--max-old-space-size=4096",
    "CLAUDE_CONFIG_DIR": "/home/node/.claude",
    "POWERLEVEL9K_DISABLE_GITSTATUS": "true"
  },
  "workspaceFolder": "/workspace",
  "forwardPorts": [
    5050,  // pgAdmin
    5432,  // PostgreSQL
    5433,  // ImmuDB PostgreSQL wire protocol
    3322,  // ImmuDB gRPC
    6379,  // Redis
    8080,  // ImmuDB Web Console
    8081,  // Redis Commander
    9497,  // ImmuDB Metrics
    50051, // Ledger Service
    50052  // Treasury Service
  ],
  "portsAttributes": {
    "5050": {
      "label": "pgAdmin",
      "onAutoForward": "notify"
    },
    "5432": {
      "label": "PostgreSQL",
      "onAutoForward": "silent"
    },
    "5433": {
      "label": "ImmuDB PostgreSQL",
      "onAutoForward": "silent"
    },
    "3322": {
      "label": "ImmuDB gRPC",
      "onAutoForward": "silent"
    },
    "6379": {
      "label": "Redis",
      "onAutoForward": "silent"
    },
    "8080": {
      "label": "ImmuDB Console",
      "onAutoForward": "notify"
    },
    "8081": {
      "label": "Redis Commander",
      "onAutoForward": "notify"
    },
    "9497": {
      "label": "ImmuDB Metrics",
      "onAutoForward": "silent"
    },
    "50051": {
      "label": "Ledger Service",
      "onAutoForward": "silent"
    },
    "50052": {
      "label": "Treasury Service",
      "onAutoForward": "silent"
    }
  }
}
